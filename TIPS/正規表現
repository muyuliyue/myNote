const regex = /^0(\.0|\.([1-9]))?$|^[1-9][0-9]{0,2}(\.[0-9])?$|^\.[0-9]$/;

// 测试用例
const testCases = [
  "0",    // ✅
  "0.0",  // ✅
  "0.1",  // ✅
  ".1",   // ✅
  "1",    // ✅
  "123",  // ✅
  "999",  // ✅
  "123.4",// ✅
  "01",   // ❌
  "001",  // ❌
  "1.",   // ❌
  "1234", // ❌
  "123.45"// ❌
];

// 验证函数
testCases.forEach((testCase) => {
  console.log(`"${testCase}": ${regex.test(testCase) ? "✅匹配" : "❌不匹配"}`);
});
